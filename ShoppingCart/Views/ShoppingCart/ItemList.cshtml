@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Shopping Cart";
    @model IEnumerable<ShoppingCart.Entities.Item>
}


<br />

<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Nombre </th>
        <th>Precio</th>
        <th>Imagen</th>

        <th></th>
    </tr>
    @foreach (var item  in Model)
    {
<tr>
    <td>@item.Id</td>
    <td>@item.Nombre</td>
    <td>$ @item.Precio  </td>
    <td><img style="width:70px;height:70px" src="~/img/@item.Imagen" /></td>

    @if (ViewBag.Carrito != null && ViewBag.Carrito.Contains(item.Id))
    {
        <td><img style="width:20px;height:20px" src="https://image.flaticon.com/icons/png/512/107/107831.png" /><span> Añadido al carrito</span></td>
    }
    else
    {
        <td>@Html.ActionLink("Añadir al carrito", "ItemList", "ShoppingCart", new { id = item.Id }, new { @class = "btn btn-primary" })</td>
    }
</tr>
    }
</table>